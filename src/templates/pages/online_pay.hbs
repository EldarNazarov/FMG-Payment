<body class="blue_lg">

    {{!-- {{> common/header }} --}}

    <div class="bg_blue"></div>

    <main>
        <section id="online_pay" class="page-container">


            <div class="container">
                <div class="row">
                    <div class="col-lg-4 left-side">
                        <div class="logo">
                            <img src="../assets/fmg_logo.svg" alt="">
                        </div>
                    </div>


                    <div class="col-lg-8 blue_side">

                        <form action="" id="form_feed">

